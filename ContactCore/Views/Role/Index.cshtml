@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h2>Список ролей</h2>


<a asp-action="Create" class="btn btn-primary" style="margin-top: 20px; margin-bottom: 20px;">Добавить роль</a>
<table class="table">
    @foreach(var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary">Редактировать</a>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>